<Window x:Name="Video_Window" x:Class="wpfGMTraceability.Views.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfGMTraceability.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="VideoTutorial" Height="720" Width="1280" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" ResizeMode="NoResize" Loaded="Video_Window_Loaded">
    <Grid>
        <materialDesign:Card Margin="0 10 0 0" UniformCornerRadius="10">
            <Grid>
                <!-- Control invisible para anclar el Popup -->
                <Border x:Name="PopupAnchor" Width="0" Height="0" />
                
                <wpf:WebView2 Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Name="webView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" />


                <Popup IsOpen="True" Placement="Relative" PlacementTarget="{Binding ElementName=PopupAnchor}"
                        HorizontalOffset="0" VerticalOffset="320" AllowsTransparency="True" StaysOpen="True">
                    <Button Width="45" Height="45" x:Name="BtnClose" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 0 0 0"
                            Background="#66000000" Click="BtnClose_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" BorderBrush="#66000000">
                        <materialDesign:PackIcon Kind="Close" Height="40" Width="40" Foreground="White" />
                    </Button>
                </Popup>

            </Grid>
        </materialDesign:Card>
        
        
    </Grid>
</Window>
