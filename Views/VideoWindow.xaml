<Window x:Name="Video_Window" x:Class="wpfGMTraceability.Views.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="VideoTutorial" Height="720" Width="1280"
        WindowStyle="None" Background="Black" AllowsTransparency="False"
        ResizeMode="NoResize"
        Loaded="VideoWindow_Loaded">
    <Grid>
        <materialDesign:Card Margin="0 10 0 0" UniformCornerRadius="10" Background="Black">
            <Grid>
                <!-- Capa de imagen -->
                <Image x:Name="ImgSlide" Stretch="UniformToFill" Visibility="Collapsed"/>

                <!-- Capa de video -->
                <MediaElement x:Name="VidSlide" Margin="0 0 0 10" LoadedBehavior="Manual" UnloadedBehavior="Stop" Stretch="Uniform" Visibility="Visible"/>

                <!-- Overlay de fundido -->
                <Rectangle x:Name="FadeOverlay" Fill="Black" Opacity="0"/>

                <!-- Botón cerrar -->
                <Button Width="45" Height="45" x:Name="BtnClose"
                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 0 15 0"
                        Background="#66000000" Click="BtnClose_Click"
                        Style="{StaticResource MaterialDesignFloatingActionButton}"
                        BorderBrush="#66000000">
                    <materialDesign:PackIcon Kind="Close" Height="50" Width="50" Foreground="White" />
                </Button>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
