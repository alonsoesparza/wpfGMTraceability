<Window x:Name="ModelPause_Window" x:Class="wpfGMTraceability.Views.ModelPauseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfGMTraceability.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        Title="ModelPauseWindow" Height="350" Width="400" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" ResizeMode="NoResize" Loaded="ModelPause_Window_Loaded">
    <Grid>
        <materialDesign:Card Margin="10" UniformCornerRadius="10">
            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                    <TextBlock Text="Pausar Modelo"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}" />

                    <PasswordBox x:Name="txtPassword" FontSize="18"
                         Margin="0 10 0 40"
                         Style="{StaticResource MaterialDesignOutlinedPasswordBox}">
                        <materialDesign:HintAssist.Hint>Contraseña</materialDesign:HintAssist.Hint>
                    </PasswordBox>


                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                        <Button x:Name="BtnValidate" Content="Validar" FontSize="20" Height="60" Width="120" Margin="10 0" Style="{StaticResource MaterialDesignRaisedButton}" Click="BtnValidate_Click"/>

                        <Button x:Name="BtnCancel" Content="Cancelar" FontSize="20" Height="60" Width="120" Margin="10 0" Style="{StaticResource MaterialDesignFlatButton}" Click="BtnCancel_Click" />
                    </StackPanel>

                    <TextBlock x:Name="lblError"
                       Foreground="Red"
                       Visibility="Collapsed"
                       Margin="0 10 0 0"
                       Text="Usuario o contraseña incorrectos"
                       HorizontalAlignment="Center"
                       Style="{StaticResource MaterialDesignCaptionTextBlock}" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
